a=int(input("enter no.of blocks:"))
b=int(input("enter no of lines:"))
s=int(input("enter no of stars:"))
for i in range(a):
    count=0
    for j in range(b-i):
        for k in range(s):
            print("*",end=" ")
            count=count+1
        print()
    print(count)
    print("__________________________________")
